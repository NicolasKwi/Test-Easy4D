{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3">Détails du Produit</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ produit.id }}</td>
                        </tr>
                        <tr>
                            <th>Easy4D Code</th>
                            <td>{{ produit.Easy4DCode }}</td>
                        </tr>
                        <tr>
                            <th>EAN Code</th>
                            <td>{{ produit.EANCode }}</td>
                        </tr>
                        <tr>
                            <th>Designation</th>
                            <td>{{ produit.Designation }}</td>
                        </tr>
                        <tr>
                            <th>Category Tyre Name</th>
                            <td>{{ produit.CategoryTyreName }}</td>
                        </tr>
                        <tr>
                            <th>Brand Name</th>
                            <td>{{ produit.BrandName }}</td>
                        </tr>
                        <tr>
                            <th>Family Name</th>
                            <td>{{ produit.FamilyName }}</td>
                        </tr>
                        <tr>
                            <th>Width</th>
                            <td>{{ produit.Width }}</td>
                        </tr>
                        <tr>
                            <th>Height</th>
                            <td>{{ produit.Height }}</td>
                        </tr>
                        <tr>
                            <th>Diameter</th>
                            <td>{{ produit.diameter }}</td>
                        </tr>
                        <tr>
                            <th>Construction</th>
                            <td>{{ produit.Construction }}</td>
                        </tr>
                        <tr>
                            <th>Load Index</th>
                            <td>{{ produit.LoadIndex }}</td>
                        </tr>
                        <tr>
                            <th>Speed Index</th>
                            <td>{{ produit.SpeedIndex }}</td>
                        </tr>
                        <tr>
                            <th>Segment</th>
                            <td>{{ produit.Segment }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_produit_index') }}" class="btn btn-secondary m-1">Retour à la liste</a>
            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary m-1">Modifier</a>
            {{ include('produit/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

